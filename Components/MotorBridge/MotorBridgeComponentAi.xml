<?xml version="1.0" encoding="UTF-8"?>
<component name="MotorBridge" kind="active">
    <!-- Example import of standard framework ports -->
    <import_port_type>Fw/Log/LogPortAi.xml</import_port_type>
    <import_port_type>Fw/Tlm/TlmPortAi.xml</import_port_type>

    <ports>
        <input port name="cmdIn" data_type="Fw/Cmd/CmdPortAi.xml"/>
        <output port name="tlmOut" data_type="Fw/Tlm/TlmPortAi.xml"/>
    </ports>

    <commands>
        <command name="SET_SPEED" opcode="0x01" />
    </commands>

    <events>
        <event name="MotorStarted" id="0x01" severity="activity" format="Motor started at speed %u">
            <arg name="speed" type="U32"/>
        </event>
    </events>

    <telemetry>
        <channel name="MotorSpeed" id="0x10" type="U32" />
    </telemetry>
</component>
